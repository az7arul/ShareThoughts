.page-header
  %h1 Sign up to Genweb2 ShareThoughts

= form_for(resource, :as => resource_name,
           :html => {class: 'form-horizontal'},
           :url => registration_path(resource_name)) do |f|

  = devise_error_messages!

  .control-group
    %label.control-label= f.label :first_name
    .controls
      = f.text_field :first_name


  .control-group
    %label.control-label= f.label :last_name
    .controls
      = f.text_field :last_name

  .control-group
    %label.control-label= f.label :email
    .controls
      = f.email_field :email

  .control-group
    %label.control-label= f.label :password
    .controls
      = f.password_field :password

  .control-group
    %label.control-label= f.label :password_confirmation
    .controls
      = f.password_field :password_confirmation


  .form-actions
    = f.submit 'Sign up', class: 'btn btn-primary'
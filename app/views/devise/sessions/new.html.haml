.signin-form.container-pushup
  .page-header
    %h1 Welcome to Genweb2 ShareThoughts.


  .well
    %h4
      If you already have an account please
    %a.btn.btn-primary.btn-large{href: '#full-signin-form',
                                 'data-toggle' => 'modal'} Sign in
    Or
    %a.btn.btn-large{href: new_user_registration_path} Create your account

  #full-signin-form.modal{style: 'display: none'}
    .modal-header
      %button.close{'data-dismiss' => 'modal', 'aria-hidden' => 'true'} &times;
      %h3 Sign in

    = form_for(resource, :as => resource_name,
              :html => {class: 'form-horizontal'},
              :url => session_path(resource_name)) do |f|

      .modal-body
        .control-group
          %label.control-label= f.label :email
          .controls
            = f.text_field :email

        .control-group
          %label.control-label= f.label :password
          .controls
            = f.password_field :password

        .control-group
          .controls
            %label.checkbox
              = f.check_box :remember_me
              Remember me

      .modal-footer
        = link_to "Forgot your password?", new_password_path(resource_name)
        = f.submit 'Sign in', class: 'btn btn-primary'




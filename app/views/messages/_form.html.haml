= form_for Message.new, :remote => true  do |f|
  = f.hidden_field :discussion_group_id, value: @group.id
  = f.text_area :content, :id => "send_message",
                :rows => "2", class: 'span12', autofocus: true,
                placeholder: 'Write your message and press Enter or use Shift + Enter for new line.'
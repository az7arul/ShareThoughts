= form_for @group, html: {class: 'form form-horizontal'} do |f|
  .control-group
    %label.control-label= f.label :name
    .controls
      = f.text_field :name

  = f.fields_for @topic do |ff|
    .control-group
      %label.control-label= ff.label :topic
      .controls
        =ff.text_field :content

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'